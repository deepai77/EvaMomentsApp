<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".ui.ShowCommandsActivity">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/colorAccent"
            android:src="@drawable/back_button_white"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_toRightOf="@+id/backButton"
            android:id="@+id/settingsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Common Commands"
            android:padding="15dp"
            android:textSize="20sp" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="5dp"
        android:layout_above="@+id/userQuery"
        android:layout_below="@+id/title"
        android:id="@+id/recyclerViewTasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <TextView
        android:visibility="invisible"
        android:layout_above="@+id/listening"
        android:text=""
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/userQuery"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        />
    <ImageView
        android:id="@+id/listening"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/statusText"
        android:visibility="invisible"
        android:src="@drawable/listening_icon"
        android:scaleType="fitXY"
        android:layout_marginTop="2dp" />
    <ImageView
        android:layout_alignParentBottom="true"
        android:id="@+id/progress_loader"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:src="@drawable/not_ready"
        android:scaleType="fitXY"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:maxLines="1"
        android:textStyle="bold"
        android:ellipsize="end"
        android:text=""/>
</RelativeLayout>