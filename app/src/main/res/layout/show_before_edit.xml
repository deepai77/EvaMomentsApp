<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_above="@+id/commands"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/touchLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/details"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/table_item_border"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Keywords "/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_item_border"
                        />
                    <TextView
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:id="@+id/keywords"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/table_item_border"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prelude Image "/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_item_border"
                        />
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="10dp"
                            android:visibility="gone"
                            android:id="@+id/preludeImageAvailability"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>
                        <ImageView
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:id="@+id/preludeImagePic"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/table_item_border"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prelude Audio "/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_item_border"
                        />
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/i"
                            android:padding="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:weightSum="2"
                    android:background="@drawable/table_item_border"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Media Count "/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_item_border"
                        />
                    <TextView
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:id="@+id/mediaCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/details"
                android:layout_weight="1"
                android:id="@+id/mediaItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Media Items: "/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@+id/mediaItems"
                android:scrollbars="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerview">
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </ScrollView>
    <TextView
        android:id="@+id/commands"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:text="'Cancel'"/>
</RelativeLayout>