<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/tab"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/backButton"
                    android:src="@drawable/back_button"
                    android:layout_width="40dp"
                    android:background="@color/transparent"
                    android:layout_height="40dp"/>
                <ImageView
                    android:layout_toLeftOf="@+id/edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/play"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/play_icon"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/edit"
                    android:layout_toLeftOf="@id/delete"
                    android:src="@drawable/edit_icon"
                    android:layout_marginLeft="15dp"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/delete"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@id/cancel"
                    android:src="@drawable/delete_icon"
                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/cancel"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/cancel_icon"
                    />
            </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/tab"
        android:layout_above="@+id/commands"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/touchLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/details"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/table_item_border"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keywords "/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_item_border"
                />
            <TextView
                android:padding="10dp"
                android:layout_weight="1"
                android:id="@+id/keywords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/table_item_border"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Created"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_item_border"
                />
            <TextView
                android:padding="10dp"
                android:layout_weight="1"
                android:id="@+id/createdOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:background="@drawable/table_item_border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Modified "/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_item_border"
                />
            <TextView
                android:layout_weight="1"
                android:padding="10dp"
                android:id="@+id/lastModified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:background="@drawable/table_item_border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Viewed "
                android:textStyle="bold"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_item_border"
                />
            <TextView
                android:padding="10dp"
                android:layout_weight="1"
                android:id="@+id/lastPlayed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Never"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:background="@drawable/table_item_border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Views"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_item_border"
                />
            <TextView
                android:padding="10dp"
                android:layout_weight="1"
                android:id="@+id/numTimesPlayed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:background="@drawable/table_item_border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prelude Image "/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_item_border"
                />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:visibility="gone"
                android:id="@+id/preludeImageAvailability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
            <ImageView
                android:layout_margin="5dp"
                android:visibility="gone"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/preludeImagePic"/>
            </RelativeLayout>
        </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:background="@drawable/table_item_border"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prelude Audio "/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/table_item_border"
            />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/i"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"/>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/speaker"
            android:layout_toRightOf="@+id/i"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/speaker_icon"/>
        </RelativeLayout>
    </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:background="@drawable/table_item_border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Media Count "/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_item_border"
                />
            <TextView
                android:padding="10dp"
                android:layout_weight="1"
                android:id="@+id/mediaCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/details"
                android:layout_weight="1"
                android:textStyle="bold"
                android:id="@+id/mediaItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Media Items: "/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@+id/mediaItems"
                android:scrollbars="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerview">
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </ScrollView>
    <TextView
        android:id="@+id/commands"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:text="'Play Prelude'"/>
</RelativeLayout>